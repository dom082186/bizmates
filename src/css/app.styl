html {
    overflow-y: scroll;
    font-size: 14px;
}

body {
    font-size: 1rem;
    line-height: 1.45;
    color: #404040;
}

h1, h2, h3, h4, h5, h6 {
    margin: 0 0 10px;
    line-height: 1.45;
    letter-spacing: 0;
}

h1, .h1 {
	font-size: 2.571rem;
}

h2, .h2 {
	font-size: 2.143rem;
}

h3, .h3 {
	font-size: 1.714rem;
}

h4, .h4 {
	font-size: 1.286rem;
}

h5, .h5 {
	font-size: 1.000rem;
}

h6, .h6 {
	font-size: 0.857rem;
}

p {
    margin: 0 0 10px;
}

img {
    max-width: 100%;
    height: auto;
}

.container {
    width: 100%;
    max-width: 1440px;
    padding-left: 15px;
    padding-right: 15px;
    margin: 0 auto;
}